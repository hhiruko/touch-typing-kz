{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,

    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "depricated-files/**"
  ]
}

